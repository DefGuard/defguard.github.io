---
export interface FAQEntry {
  question: string;
  answer: string;
}
export interface Props {
  entries: FAQEntry[];
}
const { entries } = Astro.props;

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": entries.map(entry => ({
    "@type": "Question",
    "name": entry.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": entry.answer
    }
  }))
};
---
<script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
