const lastUpdated = "2025-12-30";
const featuredImage = "github.com/DefGuard/defguard.github.io/raw/main/public/images/png/defguard.png";
const imageWidth = "1080";
const imageHeight = "540";
const tags = [
  "openvpn alternative",
  "openvpn replacement",
  "openvpn to wireguard",
  "openvpn migration",
  "wireguard vpn",
  "wireguard enterprise",
  "enterprise vpn solution",
  "vpn mfa",
  "vpn 2fa",
  "self-hosted vpn",
  "open source vpn",
  "openvpn access server alternative",
  "vpn performance",
  "zero trust vpn",
  "active directory vpn",
