      </div>
    </ProductSection>

    <div class="page-content-wrapper">
      <aside class="sidebar-container">
        <SidebarNav sections={sections} title="On this page" />
      </aside>

      <div class="main-content">

    <ProductSection padding="small">
      <section id="comparison-matrix">
