.cta-button {
  display: inline-block;
  text-decoration: none;
  background-color: var(--primary);
  color: var(--text-primary);
  padding: 12px 24px;
  border-radius: 4px;
  font-family: "Poppins";
  font-size: 16px;
  font-weight: 500;
  border: 1px solid var(--border-separator);
  cursor: pointer;
  transition: background-color 0.2s ease;

  &:hover {
    background-color: var(--primary-hover);
  }
} 