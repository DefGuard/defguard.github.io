---
import NewsletterSection from "../components/NewsletterSection.astro";
import Navigation from "../components/base/Navigation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "";
const description = "defguard - enterprise open-source SSO&VPN";
const featuredImage = "https://github.com/DefGuard/defguard/raw/main/docs/header.png";
const imageWidth = "1080";
const imageHeight = "256";
---

<BaseLayout
  title={title}
  description={description}
  featuredImage={featuredImage}
  imageWidth={imageWidth}
  imageHeight={imageHeight}
>
  <Navigation activeSlug="/newsletter" />
  <main id="newsletter-page">
    <NewsletterSection />
  </main>
</BaseLayout>

<style lang="scss" is:global>
  #newsletter-page {
    padding: calc(var(--nav-height) + 100px) 0 100px;
  }
</style>
