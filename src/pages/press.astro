---
import Navigation from "../components/base/Navigation.astro";
import ProductLayout from "../layouts/ProductLayout.astro";
import FlexibleSection from "../components/FlexibleSection.astro";
import HomeSection from "../components/home/HomeSection.astro";
import AstroButton from "../components/AstroButton.astro";
import { Image } from "astro:assets";
import brandAssets from "/public/images/data/brandassets.png";
import contactImage from "/public/images/data/key-visual-BD.png";
const title = "defguard - Press Kit";
const featuredImage = "public/images/product/core/hero-image.png";
const imageWidth = "1920";
const imageHeight = "1080";
const url = "https://defguard.net/press/";
const tags = [
  "defguard",
  "open source",
  "sso & vpn",
  "vpn",
  "mfa",
  "2fa",
  "mfa/2fa",
  "WireGuard®",
  "ldap",
  "openldap",
  "postgresql",
  "postgres",
  "openid",
  "totp",
  "webauthn",
  "opensense",
  "freebsd",
  "rust",
  "secure",
  "desktop client",
  "desktop",
  "yubikey",
  "docker",
  "kubernetes",
  "k8s",
  "press",
  "media",
  "press kit",
  "brand assets",
  "company information",
  "press release",
  "media contact",
];
---

<ProductLayout
  title={title}
  featuredImage={featuredImage}
  imageWidth={imageWidth}
  imageHeight={imageHeight}
  url={url}
  tags={tags}
>
  <Navigation activeSlug="/press/" />

  <main id="home-page">
    <HomeSection variant="white" contentId="press-header">
      <h1>defguard Press Kit</h1>
      <p>
        Welcome to the defguard press resource center. Find everything you need to
        accurately report on our open-source zero-trust enterprise VPN solution.
      </p>
      <div class="link-track">
        <AstroButton
          link={{
            href: "/images/press/defguard-presskit.zip",
            target: "_self",
          }}
          text="Download Press Kit"
        />
      </div>
    </HomeSection>
    <FlexibleSection
      title="Media Coverage"
      id="press-coverage"
      variant="gray"
      theme="light"
    >
      <div class="full-width">
        <p class="coverage-intro">
          defguard has been featured in various technology and security publications. Here
          are some recent articles and mentions:
        </p>
        <div class="articles-grid">
          <a href="https://hard2beat.vc/insights-resources/why-we-invested-in-defguard/" class="article-card">
            <span class="publication">Hard2beat</span>
            <h3 class="article-title">
              Why we invested in Defguard
            </h3>
            <span class="article-date">June 1, 2025</span>
          </a>

          <a href="/blog/defguard-pre-seed" class="article-card">
            <span class="publication">Blog</span>
            <h3 class="article-title">
              Defguard Secures Strategic Partners and Raises EUR 1.2 Million in Pre-Seed
              Funding
            </h3>
            <span class="article-date">May 21, 2025</span>
          </a>

          <a
            href="https://polandinsight.com/hard2beat-vc-invests-pln-3-million-in-defguard-a-polish-open-source-cybersecurity-platform-92369/#"
            class="article-card"
          >
            <span class="publication">Poland Insight</span>
            <h3 class="article-title">
              Hard2beat VC Invests PLN 3 Million in Defguard – A Polish Open-Source
              Cybersecurity Platform
            </h3>
            <span class="article-date">May 21, 2025 </span>
          </a>

          <a
            href="https://mambiznes.pl/news/75-mln-zl-dla-trzech-startupow-fundusz-hard2beat-inwestuje-w-ramach-pfr-starter/"
            target="_blank"
            class="article-card"
          >
            <span class="publication">Mam Biznes</span>
            <h3 class="article-title">
              Hard2beat Fund Invests PLN 7.5 Million in Three Startups Through PFR Starter
              (in Polish)
            </h3>
            <span class="article-date">May 20, 2025</span>
          </a>

          <a
            href="https://mamstartup.pl/trzy-premierowe-transakcje-o-wartosci-75-mln-pln-hard2beat-vc-inwestuje-w-neuromedical-defguard-i-defendeye/"
            target="_blank"
            class="article-card"
          >
            <span class="publication">Mam Startup</span>
            <h3 class="article-title">
              Three first-round deals: Hard2beat VC backs Neuromedical, DefGuard, and
              DefendEye (in Polish)
            </h3>
            <span class="article-date">May 20, 2025</span>
          </a>

          <a
            href="https://stacjainnowacja.tvp.pl/84183493/odc-150-stacja-innowacja"
            target="_blank"
            class="article-card"
          >
            <span class="publication">Stacja Innowacja</span>
            <h3 class="article-title">
              Polish TV program on TVP Polonia that showcases innovative technologies from
              Poland. Defguard was featured in one of the episodes. (in Polish)
            </h3>
            <span class="article-date">December 23, 2024</span>
          </a>

          <a href="/blog/defguard-release" class="article-card">
            <span class="publication">Blog</span>
            <h3 class="article-title">
              True Zero-Trust WireGuard® VPN with 2FA/MFA - defguard security paltform
              released
            </h3>
            <span class="article-date">May 12, 2023</span>
          </a>
        </div>
      </div>
    </FlexibleSection>

    <FlexibleSection title="Brand Assets" id="brand-assets" variant="white" theme="light">
      <div slot="left">
        <Image src={brandAssets} alt="defguard brand assets" />
      </div>

      <div slot="right">
        <p>
          Download official defguard logos, screenshots, and brand assets for use in your
          publications. All assets are available in high-resolution formats suitable for
          both print and digital media.
        </p>
        <p>
          <strong>Usage Guidelines:</strong> When using our brand assets, please maintain the
          integrity of the design. Do not modify, distort, or alter the colors of our logo.
          Ensure adequate spacing around the logo and maintain its proportions when resizing.
        </p>
        <div class="learn-more">
          <a href="/images/press/defguard-presskit.zip" class="learn-more-link"
            >Download Press Kit</a
          >
        </div>
      </div>
    </FlexibleSection>

    <FlexibleSection
      title="Company Information"
      id="company-information"
      variant="gray"
      theme="light"
    >
      <div slot="left">
        <p>
          Defguard unifies remote access, identity, and access management, with seamless
          support for LDAP, Active Directory, and Zero Trust access policies.
        </p>
        <p>
          Just months after launching its Enterprise VPN, defguard has already earned the
          trust of some of the world’s most demanding organizations — including leading
          automotive manufacturers, NASCAR teams, industrial facilities, data centers,
          cloud providers, game studios, venture capital firms, and multiple EU government
          institutions.
        </p>
      </div>

      <div slot="right">
        <h3>Key Facts</h3>
        <ul>
          <li><strong>Founded:</strong> 2020</li>
          <li><strong>Headquarters:</strong> Szczecin, Poland</li>
          <li>
            <strong>Product Type:</strong> Enterprise-ready open-source identity and access
            management platform
          </li>
          <li>
            <strong>Core Technology:</strong> WireGuard® VPN with native MFA, Zero Trust architecture
          </li>
        </ul>
      </div>
    </FlexibleSection>

    <FlexibleSection
      title="Press Contact"
      id="press-contact"
      variant="white"
      theme="light"
    >
      <div slot="left">
        <p>
          For media inquiries, interview requests, or additional information about
          defguard, please contact our press team:
        </p>
        <div class="learn-more">
          <a href="mailto:office@defguard.net" class="learn-more-link">Contact Us</a>
        </div>
      </div>

      <div slot="right">
        <Image src={contactImage} alt="contact information" />
      </div>
    </FlexibleSection>
  </main>
</ProductLayout>

<style lang="scss" is:global>
  #press-header {
    padding-bottom: page-spacing(100px);
    padding-top: 50px;

    & > p {
      @include typography(paragraph);
      padding-bottom: 8px;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    h1 {
      color: var(--text-body-primary);
      padding-bottom: 40px;
      max-width: 996px;
      text-align: center;
      text-wrap: balance;
      margin: 0 auto !important;
      @include typography(title);
    }

    .link-track {
      width: 100%;
      display: flex;
      flex-flow: row;
      align-items: center;
      justify-content: center;
      gap: 16px;
      padding: 40px 0px;

      @include break-down(sm) {
        flex-flow: column;
        align-items: center;
      }
    }
  }

  #home-page {
    --page-spacing-factor: 0.5;
    @include break-up(lg) {
      --page-spacing-factor: 1;
    }

    .flexible-content {
      padding-top: page-spacing(80px);
      padding-bottom: page-spacing(80px);

      .section-title {
        @include typography(
          section
        ); // Change back to section typography for main sections
        border-bottom: 1px solid var(--text-body-primary);
        padding-bottom: 1rem;
        margin-bottom: 2rem;
      }

      h3 {
        @include typography(h3);
        margin-top: 0;
        margin-bottom: 1rem;
      }

      p {
        @include typography(paragraph);
        margin-bottom: 1.5rem;
      }

      .learn-more {
        margin-bottom: 1.5rem;
      }

      .learn-more-link {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background-color: var(--primary-button-bg, #0c8ce0);
        color: var(--primary-button-text, white);
        border-radius: 6px;
        font-weight: 600;
        text-decoration: none;
        transition: background-color 0.2s ease-in-out;

        &:hover {
          background-color: var(--primary-button-hover, #0c8ce0);
        }
      }

      ul {
        margin: 0 0 1.5rem 0;
        padding-left: 20px;

        li {
          @include typography(paragraph);
          margin-bottom: 0.5rem;
        }
      }

      em {
        font-size: 0.9em;
        opacity: 0.8;
      }

      .column {
        @media (max-width: 768px) {
          &.right-column {
            margin-top: 1rem;
          }
        }
      }
    }

    #press-coverage {
      .full-width {
        width: 100%;
        max-width: 100%;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        box-sizing: border-box;
      }

      .coverage-intro {
        @include typography(paragraph);
        text-align: center;
        max-width: 800px;
        margin: 0 auto 60px auto;
        width: 100%;
      }

      .articles-grid {
        display: grid;
        grid-template-columns: repeat(1, 1fr);
        gap: 25px;
        width: 100%;
        box-sizing: border-box;

        @include break-up(sm) {
          grid-template-columns: repeat(2, 1fr);
          gap: 30px;
        }

        @include break-up(lg) {
          grid-template-columns: repeat(3, 1fr);
          gap: 40px;
        }
      }

      .article-card {
        display: block; // Since it's now an anchor
        text-decoration: none; // Remove default link styling
        color: inherit; // Keep text color
        padding: 20px;
        background-color: #f9f9f9;
        border-width: 0 0 2px 0;
        border-style: solid;
        border-color: #f5f5f5;
        border-radius: 0px;
        transition:
          transform 0.2s ease,
          box-shadow 0.2s ease,
          border-color 0.2s ease;
        transform: translateY(-0px); // Reduced from -3px
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.03); // Reduced size and opacity further

        &:hover {
          transform: translateY(-5px); // Match the default state
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.03); // Match the default state
          border-color: var(--primary-button-bg, #0c8ce0);
        }

        .publication {
          display: block;
          color: var(--text-body-secondary);
          font-size: 14px;
          margin-bottom: 8px;
          font-weight: 500;
        }

        .article-title {
          @include typography(h4);
          margin: 0 0 15px 0;
          color: var(--text-body-primary);
        }

        .article-date {
          display: block;
          color: var(--text-body-secondary);
          font-size: 14px;
          margin-top: auto;
        }
      }
    }
  }
</style>
