---
import Navigation from "../components/base/Navigation.astro";
import ProductLayout from "../layouts/ProductLayout.astro";
import ContentLimiter from "../components/ContentLimiter.astro";
import type { TestimonialData } from "./_home/components/client-side/Testimonials/type";
import { testimonialSchema } from "./_home/components/client-side/Testimonials/type";

const testimonialsImportData = await Astro.glob("../data/home/testimonials/**/*.md");
const testimonialsData: Array<TestimonialData> = testimonialsImportData
  .map((val) => {
    const toValidate = { ...val.frontmatter, markdownRaw: val.rawContent() };
    return testimonialSchema.parse(toValidate);
  })
  .sort((a, b) => {
    const order = ["prusa", "acquinox", "sipro"];
    const ia = order.findIndex((k) => a.imageSecondary.toLowerCase().includes(k));
    const ib = order.findIndex((k) => b.imageSecondary.toLowerCase().includes(k));
    return (ia === -1 ? 99 : ia) - (ib === -1 ? 99 : ib);
  })
  .slice(0, 3);

const title = "Partnering with Defguard";
const description =
  "Join the Defguard partner program. Resell, integrate, or build on Defguard for Enterprise WireGuard VPN and zero-trust access.";
const url = "https://defguard.net/partnering-with-defguard";
const featuredImage = "/images/png/defguard.png";
const imageWidth = "1080";
const imageHeight = "540";
const tags = [
  "defguard",
  "partners",
  "wireguard",
  "enterprise-vpn",
  "reseller",
  "integration",
];
---

<ProductLayout
  title={title}
  featuredImage={featuredImage}
  imageWidth={imageWidth}
  imageHeight={imageHeight}
  url={url}
  tags={tags}
  description={description}
  bodyClass="white-background"
>
  <Navigation activeSlug="/partnering-with-defguard/" />

  <main id="partnering-with-defguard-page">
    <!-- Hero (light theme) -->
    <section class="wge-hero wge-hero--light" aria-labelledby="wge-hero-title">
      <ContentLimiter maxWidth={1100}>
        <div class="wge-hero__layout">
          <div class="wge-hero__inner">
            <h1 id="wge-hero-title" class="wge-hero__title">
              <span class="wge-hero__title-line1">Partnering with Defguard</span>
            </h1>
            <p class="wge-hero__subhead">
              Offer the most secure WireGuard VPN solution with identity, MFA, and zero-trust access to your clients on prefered terms.
            </p>
            <div class="wge-hero__ctas">
              <a href="#wge-access-headline" class="wge-hero__btn wge-hero__btn--primary">Become Defguard Partner</a>
              <a href="mailto:partner@defguard.net" class="wge-hero__btn wge-hero__btn--contact">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
                <span>Get in touch</span>
              </a>
            </div>
            <div class="wge-hero__benefits">
              <div class="wge-hero__benefit">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>Technical enablement</span>
              </div>
              <div class="wge-hero__benefit">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>Co-marketing support</span>
              </div>
              <div class="wge-hero__benefit">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
                <span>Deal support</span>
              </div>
            </div>
          </div>
        </div>
      </ContentLimiter>
    </section>

    <!-- Partners -->
    <section class="wge-partners" aria-labelledby="wge-partners-headline">
      <ContentLimiter maxWidth={1100}>
        <h2 id="wge-partners-headline" class="wge-partners__headline">Our Partners</h2>
        <p class="wge-partners__sub">Trusted partners delivering Defguard solutions worldwide</p>
        <div class="wge-partners__grid" aria-label="Trusted by xcomp and epssi">
          <article class="wge-partners__card">
            <a href="https://xcomp.pl/en/home/" target="_blank" rel="noopener noreferrer" class="wge-partners__link" aria-label="Xcomp – Defguard MSP Partner Poland">
              <div class="wge-partners__logo-wrapper">
                <img src="/images/partnering-with-defguard/xcomp-logo.png" alt="xcomp" class="wge-partners__logo" width="125" height="125" loading="lazy" />
              </div>
              <p class="wge-partners__label">Defguard MSP Partner Poland</p>
            </a>
          </article>
          <article class="wge-partners__card">
            <div class="wge-partners__logo-wrapper">
              <img src="/images/partnering-with-defguard/epssi-logo.png" alt="epssi" class="wge-partners__logo" width="125" height="125" loading="lazy" />
            </div>
            <p class="wge-partners__label">Defguard MSP Partner France</p>
          </article>
        </div>
      </ContentLimiter>
    </section>

    <!-- Power your portfolio with Defguard (blue theme, same as What partners get) -->
    <section class="wge-why wge-why--blue" aria-labelledby="wge-why-headline">
      <ContentLimiter maxWidth={1100}>
        <h2 id="wge-why-headline" class="wge-why__headline">Partnership types</h2>
        <p class="wge-why__sub">
          
          We provide the most secure WireGuard VPN solution with identity, MFA, and zero-trust access to your clients. You can resell it directly to your clients or integrate it into your managed services. 

        </p>
        <div class="wge-why__grid">
          <article class="wge-why-card">
            <div class="wge-why-card__icon" aria-hidden="true">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 265.23 240.11" width="44" height="44" fill="#3d72c1">
