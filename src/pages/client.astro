---
import Navigation from "../components/base/Navigation.astro";
import HomeSection from "../components/home/HomeSection.astro";
import ProductLayout from "../layouts/ProductLayout.astro";
import Testimonials from "./_home/components/client-side/Testimonials/Testimonials";
import type { TestimonialData } from "./_home/components/client-side/Testimonials/type";
import { testimonialSchema } from "./_home/components/client-side/Testimonials/type";
import FlexibleIdentitySection from "./_home/components/FlexibleIdentity/FlexibleIdentitySection.astro";
import HomeHeader from "./_home/components/HomeHeader.astro";
import Roadmap from "./_home/components/Roadmap/Roadmap.astro";
import FlexibleSection from "../components/FlexibleSection.astro";
import ServerSidebar from "../components/server/ServerSidebar.astro";
import signinwith from "/public/images/data/signinwith.png";
import enrollment from "/public/images/data/enrollment-screen.png";
import api from "/public/images/data/api.png";
import Image from "astro/components/Image.astro";
import YouTubeVideo from "../components/video/YouTubeVideo.astro";
import CTASection from "../components/CTASection.astro";
import ImageCarousel from "../components/image/ImageCarousel.astro";
import ImageURL from "../components/image/ImageURL.astro"

const testimonialsImportData = await Astro.glob("../data/home/testimonials/**/*.md");

const testimonialsData: Array<TestimonialData> = testimonialsImportData.map((val) => {
  const toValidate = { ...val.frontmatter, markdownRaw: val.rawContent() };
  const res = testimonialSchema.parse(toValidate);
  return res;
});

const title = "Enterprise WireGuard¬Æ VPN Client with MFA/2FA | defguard";
const description = "Self-hosted WireGuard¬Æ VPN client with true 2FA, biometric MFA & SSO. Open-source desktop (Windows, macOS, Linux) and mobile (iOS, Android) apps for enterprise.";
const featuredImage =
  "/public/images/product/client/main-screen.png";
const imageWidth = "1920";
const imageHeight = "1080";
const url = "https://defguard.net/client";
const tags = [
  // Primary - Enterprise & Security focus
  "enterprise wireguard client",
  "wireguard vpn client mfa",
  "wireguard 2fa client",
  "self-hosted vpn client",
  "zero trust vpn client",
  // Platform keywords
  "wireguard client windows",
  "wireguard client macos",
  "wireguard client linux",
  "wireguard client ios",
  "wireguard client android",
  // Feature keywords
  "vpn biometric authentication",
  "wireguard sso client",
  "multi-factor vpn authentication",
  "corporate vpn client",
  "managed wireguard client",
  // Zero-touch & Provisioning
  "zero-touch vpn enrollment",
  "vpn auto provisioning",
  "wireguard msi installer",
  "vpn active directory integration",
  "vpn entra id",
  "mdm vpn deployment",
  // Technical/Brand
  "defguard client",
  "open source vpn client",
  "wireguard desktop client",
  "wireguard mobile client",
];

const sections = [
  { id: "clients", title: "Enterprise Desktop & Mobile Clients" },
  { id: "true-2fa-multi-factor", title: "True 2FA/Multi-Factor for WireGuard¬Æ" },
  { id: "biometrics", title: "Biometric MFA Authentication" },
  { id: "instant-vpn-configuration-updates", title: "Real-time VPN Configuration" },
  { id: "zero-touch-provisioning", title: "Zero-Touch Provisioning" },
  { id: "multiple-instances-and-vpn", title: "Multi-Instance VPN Management" },
  { id: "detailed-connection-overview", title: "Detailed Connection Analytics" },
  { id: "multiplatform-multi-architecture", title: "Cross-Platform Support" },
  { id: "any-wireguard", title: "Universal WireGuard¬Æ Compatibility" },
  { id: "faq", title: "FAQ" },
];

// FAQ Data for both visible section and schema
const faqItems = [
  {
    question: "Does defguard WireGuard client support 2FA/MFA?",
    answer: "Yes, defguard is the only WireGuard client with true 2FA/Multi-Factor Authentication. It supports biometrics (Face ID, Touch ID, fingerprint), TOTP, and SSO providers like Google, Microsoft, and Okta."
  },
  {
    question: "Can I use defguard client with any WireGuard server?",
    answer: "Yes, defguard client works with any WireGuard server. Simply import your existing configuration via the setup wizard. However, 2FA/MFA features require defguard server integration for complete enterprise security."
  },
  {
    question: "Is defguard client free and open-source?",
    answer: "Yes, defguard desktop and mobile clients are fully open-source and free to use. Enterprise features for server-side management are available with Business and Enterprise plans."
  },
  {
    question: "What platforms does defguard VPN client support?",
    answer: "Defguard supports Windows, macOS, Linux (Ubuntu, Debian, Arch, RPM-based distributions), iOS, and Android. Both Intel/x64 and ARM architectures are supported on desktop platforms."
  },
  {
    question: "How do I deploy defguard client at enterprise scale?",
    answer: "Defguard supports zero-touch provisioning via Windows MSI installer (for Microsoft Intune, Active Directory GPO, or SCCM), macOS App Store (for MDM/UEM tools), and file-based enrollment with Active Directory or Entra ID integration."
  },
  {
    question: "Does defguard support pre-logon VPN for Active Directory?",
    answer: "Yes, defguard 1.6+ supports pre-logon VPN connections, allowing Windows devices to connect to your VPN before user login. This enables secure remote authentication against Active Directory without exposing AD to the internet."
  }
];

// FAQ Schema for rich snippets
const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqItems.map(item => ({
    "@type": "Question",
    "name": item.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": item.answer
    }
  }))
};

// SoftwareApplication Schema
const softwareSchema = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "Defguard Desktop Client",
  "description": description,
  "applicationCategory": "SecurityApplication",
  "applicationSubCategory": "VPN Client",
  "operatingSystem": "Windows, macOS, Linux, iOS, Android",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "EUR",
    "availability": "https://schema.org/InStock"
  },
  "downloadUrl": "https://defguard.net/download/",
  "installUrl": "https://defguard.net/download/",
  "softwareVersion": "1.6.0",
  "releaseNotes": "https://defguard.net/blog/defguard-16-release-notes/",
  "screenshot": "https://defguard.net/images/client/devices-01.png",
  "image": "https://defguard.net/images/client/devices-01.png",
  "author": {
    "@type": "Organization",
    "name": "defguard",
    "url": "https://defguard.net"
  },
  "featureList": [
    "WireGuard VPN with true 2FA/MFA",
    "Biometric authentication (Face ID, Touch ID)",
    "SSO integration (Google, Microsoft, Okta)",
    "Zero-touch enterprise provisioning",
    "Multi-instance VPN management",
    "Active Directory and Entra ID integration",
    "Pre-logon VPN for Windows",
    "Real-time configuration updates",
    "Cross-platform support"
  ]
};

// VideoObject Schema - for video rich snippets in search results
const videoSchema = {
  "@context": "https://schema.org",
  "@type": "VideoObject",
  "name": "Defguard Desktop Client - MFA Setup & Biometric Authentication Demo",
  "description": "Learn how to set up Multi-Factor Authentication (MFA) with biometrics on the Defguard WireGuard VPN desktop client. This video demonstrates the enrollment process and biometric authentication on desktop and mobile.",
  "thumbnailUrl": "https://img.youtube.com/vi/b-XC76k4KVU/maxresdefault.jpg",
  "uploadDate": "2024-11-15",
  "duration": "PT3M45S",
  "contentUrl": "https://www.youtube.com/watch?v=b-XC76k4KVU",
  "embedUrl": "https://www.youtube.com/embed/b-XC76k4KVU",
  "publisher": {
    "@type": "Organization",
    "name": "defguard",
    "logo": {
      "@type": "ImageObject",
      "url": "https://defguard.net/images/defguard-logo.png"
    }
  }
};
---

<ProductLayout
  title={title}
  description={description}
  featuredImage={featuredImage}
  imageWidth={imageWidth}
  imageHeight={imageHeight}
  url={url}
  tags={tags}
>
  <!-- Structured Data: FAQ Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(faqSchema)} />
  
  <!-- Structured Data: SoftwareApplication Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(softwareSchema)} />

  <!-- Structured Data: VideoObject Schema -->
  <script type="application/ld+json" set:html={JSON.stringify(videoSchema)} />

  <Navigation activeSlug="/client/" />

  <main id="client-page" class="with-sidebar-nav">
    <HomeHeader
      trustedBy={false}
      showStoreButtons={true}
      repo="client"
      title="Enterprise WireGuard¬Æ VPN Client with 2FA/MFA"
      description="Open-source WireGuard¬Æ VPN clients for desktop (Windows, macOS, Linux) and mobile (iOS, Android) ‚Äî featuring true 2FA/Multi-Factor Authentication, SSO integration, and biometric security for enterprise zero-trust networks."
      buttons={[
        { name: "Download Defguard Clients", link: "/download/" },
        { name: "Explore Self-Hosted Control Plane", link: "/server/" }
      ]}
    />
    
    <!-- New content wrapper that appears after header -->
    <div class="page-content-wrapper">
      <aside class="sidebar-container">
        <ServerSidebar sections={sections} title="Main features"/>
      </aside>

      <div class="main-content">

        <FlexibleSection
          leftRatio={0.6} 
          title="Enterprise WireGuard¬Æ Desktop & Mobile VPN Clients"
          id="clients"
          variant="white"
          theme="light"
        >
        <div slot="left">
          <ImageCarousel
            src="/images/client/devices-01.png,/images/client/iphone-01.png,/images/client/mac-01.png,/images/client/Multiple instances - w.png,/images/client/Instant VPN - w.png" alt="Enterprise WireGuard VPN client interface for Windows, macOS, Linux, iOS and Android"
            interval={3}
            autoplay={true}
          />
          <p><em>Enterprise-grade security on desktop (Windows, macOS, Linux) and mobile (iOS, Android) with self-hosted VPN management.</em></p>

        </div>

          <div slot="right">
            <p>
              The Defguard <strong>enterprise VPN client</strong> delivers secure, zero-trust networking across all your devices ‚Äî purpose-built for organizations requiring self-hosted WireGuard¬Æ infrastructure.
            </p>
            <ul>
              <li>
                True 2FA/Multi-Factor Authentication on WireGuard¬Æ with <b>biometric security</b>
              </li>
              <li>
                Multi-instance VPN management with multiple locations in one client
              </li>
              <!-- <li>
                Biometrics as Multi-Factor Authenitication
              </li> -->
              <li>
                Real-time VPN configuration updates and centralized client management
              </li>
            </ul>
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.4} 
          title="True 2FA/Multi-Factor Authentication for WireGuard¬Æ VPN"
          id="true-2fa-multi-factor"
          variant="gray"
          theme="light"
        >
          <div slot="left">
            <p>
              Enterprise-grade security with true WireGuard¬Æ MFA. Both desktop and mobile clients support Defguard's internal Multi-Factor Authentication and external SSO providers (Google, Microsoft, Okta, and others) for seamless identity management integration.
            </p>
            <p>
              <em>Full 2FA/MFA support now available on mobile</em>
            </p>
          </div>

          <div slot="right">
            <ImageCarousel
              src="/images/client/True 2FA - w.png,/images/features/True 2FA.png" alt="WireGuard VPN 2FA multi-factor authentication with SSO integration"
              interval={3}
              autoplay={true}
            />
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.6} 
          title="Biometric MFA for WireGuard¬Æ VPN Security"
          id="biometrics"
          variant="white"
          theme="light"
        >
          <div slot="left">
            <ImageURL src="/images/client/Biometrics  - w.png" alt="VPN MFA biometric authentication on iOS and Android" />
          </div>

          <div slot="right">
            <p>
              Secure your WireGuard¬Æ VPN connections with biometric Multi-Factor Authentication. Defguard iOS and Android clients support Face ID, Touch ID, and fingerprint authentication for seamless yet secure access.
            </p>
            <p>
              <em>Use your device's biometrics as a convenient MFA method for enterprise VPN.</em>
            </p>
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.4} 
          title="Real-time VPN Configuration & Centralized Client Management"
          id="instant-vpn-configuration-updates"
          variant="gray"
          theme="light"
        >
          <div slot="left">
            <p>
              Enterprise VPN management made simple. Defguard enables real-time synchronization and centralized configuration of all client applications. Any changes in WireGuard¬Æ VPN configuration or access management are immediately pushed to users. Administrators can manage client behavior remotely ‚Äî enabling full traffic routing, enforcing security policies, or restricting client features.
            </p>
            <div class="learn-more">
              <a
                href="https://docs.defguard.net/enterprise/all-enteprise-features/behavior-customization"
                class="learn-more-link"
              >
                Learn more about enterprise client management
              </a>
            </div>
          </div>

          <div slot="right">
            <ImageURL src="/images/features/Instant VPN.png" alt="Real-time WireGuard VPN configuration updates and centralized enterprise client management" />
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={1} 
          title="Zero-Touch VPN Enrollment for Enterprise Deployments"
          id="zero-touch-provisioning"
          variant="white"
          theme="light"
        >
          <div slot="left">
            <p>
              Automate WireGuard¬Æ VPN client provisioning at enterprise scale. Deploy to hundreds or thousands of devices with zero manual configuration ‚Äî perfect for IT teams managing large fleets.
            </p>
            <ul>
              <li>
                <strong>Windows MSI installer</strong> ‚Äî distribute via Microsoft Intune, Active Directory GPO, or SCCM
              </li>
              <li>
                <strong>macOS App Store</strong> ‚Äî automatic updates and MDM/UEM deployment ready
              </li>
              <li>
                <strong>AD/Entra ID integration</strong> ‚Äî automated enrollment through directory services
              </li>
              <li>
                <strong>File-based provisioning</strong> ‚Äî preconfigure enrollment tokens for any deployment tool
              </li>
            </ul>
            <div class="learn-more">
              <a
                href="https://docs.defguard.net/features/desktop-client-auto-provisioning"
                class="learn-more-link"
              >
                Learn about auto-provisioning
              </a>
            </div>
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.4} 
          title="Multi-Instance VPN: Manage Multiple WireGuard¬Æ Connections"
          id="multiple-instances-and-vpn"
          variant="gray"
          theme="light"
        >
          <div slot="left">
            <p>
              Defguard's enterprise WireGuard¬Æ client is uniquely designed for MSPs, cloud providers, and data centers. Deploy multiple isolated VPN instances (for different clients, sites, or environments) while maintaining unified access through a single self-hosted client application.
            </p>
            <p>
              <em>Multi-instance management now available on mobile!</em>  
            </p>
            <div class="learn-more">
              <a
                href="https://docs.defguard.net/admin-and-features/wireguard/network-overview"
                class="learn-more-link"
              >
                Learn about Network Overview
              </a>
            </div>
          </div>

          <div slot="right">
            <ImageURL src="/images/client/Manage multiple.png" alt="Multi-instance WireGuard VPN management with multiple locations in enterprise client" />
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.6} 
          title="Detailed VPN Connection Analytics & Monitoring"
          id="detailed-connection-overview"
          variant="white"
          theme="light"
        >
          <div slot="left">
            <ImageURL src="/images/client/Detailed view.png" alt="WireGuard VPN connection analytics showing detailed statistics and tunnel monitoring" />
          </div>

          <div slot="right">
            <p>
              Enterprise visibility into every WireGuard¬Æ connection. Track detailed statistics, connection logs, and tunnel configuration (IPs, ports, DNS settings, routing tables) ‚Äî essential for IT teams managing corporate VPN infrastructure.
            </p>
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.4} 
          title="Cross-Platform WireGuard¬Æ Client: Windows, macOS, Linux"
          id="multiplatform-multi-architecture"
          variant="gray"
          theme="light"
        >
          <div slot="left">
            <p>
              Deploy across your entire organization. Enterprise WireGuard¬Æ client available for macOS, Windows, and Linux (Ubuntu, Debian, Arch, RPM-based distributions) supporting both Intel/x64 and ARM architectures.
            </p>
          </div>

          <div slot="right">
            <ImageURL src="/images/client/Platforms.png" alt="Cross-platform WireGuard VPN client for Windows macOS Linux with Intel and ARM support" />
          </div>
        </FlexibleSection>

        <FlexibleSection
          leftRatio={0.6} 
          title="Universal WireGuard¬Æ Compatibility - Zero Vendor Lock-in"
          id="any-wireguard"
          variant="white"
          theme="light"
        >
          <div slot="left">
            <ImageURL src="/images/client/Tunnel.png" alt="Universal WireGuard VPN client compatible with any WireGuard server" />
          </div>

          <div slot="right">
            <ul>
              <li>
                Works with any WireGuard¬Æ server ‚Äî not just Defguard. Import your existing VPN configuration via the setup wizard and use Defguard's enterprise client with your current self-hosted infrastructure.
              </li>
              <li>
                Note: True 2FA/Multi-Factor Authentication requires <a href="https://docs.defguard.net/admin-and-features/wireguard/multi-factor-authentication-mfa-2fa">Defguard server integration</a> for complete enterprise security.
              </li>
            </ul>
          </div>
        </FlexibleSection>

        <!-- Mid-page Enterprise CTA -->
        <div class="enterprise-cta-section" id="enterprise-evaluation">
          <div class="enterprise-cta-card">
            <div class="cta-header">
              <h3>Planning an Enterprise WireGuard¬Æ Deployment?</h3>
              <p>Get a technical consultation with our team. We'll help you evaluate defguard for your specific infrastructure, compliance requirements, and deployment scale.</p>
            </div>
            <div class="cta-features">
              <div class="feature-item">
                <span class="feature-icon">üî¨</span>
                <span class="feature-text">POC & pilot support</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üõ†Ô∏è</span>
                <span class="feature-text">Custom deployment guidance</span>
              </div>
              <div class="feature-item">
                <span class="feature-icon">üìã</span>
                <span class="feature-text">SLA & enterprise support</span>
              </div>
            </div>
            <div class="cta-buttons">
              <a href="/pricing/" class="btn-secondary">View Pricing</a>
              <a href="/book-a-demo?utm_source=client&utm_content=mid-page-cta" class="btn-primary">Book Technical Call ‚Üí</a>
            </div>
          </div>
        </div>

        <FlexibleSection
          leftRatio={1}
          title="Frequently Asked Questions"
          id="faq"
          variant="gray"
          theme="light"
        >
          <div slot="left" class="faq-container">
            {faqItems.map((item) => (
              <details class="faq-item">
                <summary>{item.question}</summary>
                <p>{item.answer}</p>
              </details>
            ))}
          </div>
        </FlexibleSection>

        <CTASection
          title="Ready for Enterprise-Grade Self-Hosted WireGuard¬Æ VPN?"
          description="See how Defguard's enterprise VPN client with MFA, SSO, and identity management fits into your zero-trust architecture."
          buttonText="Book a Demo"
          buttonLink="/book-a-demo?utm_source=client"
          id="cta-documentation"
          variant="white"
        />

        <!-- <Roadmap variant="white" /> -->
      </div>
    </div>
  </main>
</ProductLayout>

<style lang="scss" is:global>
  img {
    border: 1px solid var(--surface-frame-bg);
    border-radius: 8px;
  }
  main#client-page {
    --page-spacing-factor: 0.5;
    
    @include break-up(lg) {
      --page-spacing-factor: 1;
    }

    .page-content-wrapper {
      display: block;
      width: 100%;
      position: relative;
      
      @include break-up(lg) {
        display: flex;
        flex-direction: row;
        gap: 2rem;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 2rem;
        align-items: flex-start;
      }
    }

    .sidebar-container {
      display: none;
      
      @include break-up(lg) {
        display: block;
        position: sticky;
        top: calc(var(--nav-height, 75px) + 2rem);
        height: fit-content;
        z-index: 10;
        max-height: calc(100vh - var(--nav-height, 75px) - 4rem);
        overflow-y: auto;
        align-self: start;
        /* Remove any inherited transform or will-change */
        transform: none;
        will-change: auto;
      }
    }

    .main-content {
      flex: 1;
      
      .flexible-section{
        scroll-margin-top: 75px;
        padding: 1.5rem 0;
        margin-bottom: 90px;
        //border: 1px solid var(--border-separator);
        background-color: var(--surface-nav-bg);
        border-radius: 10px;
        box-shadow: var(--box-shadow);
      }

      .flexible-content {
        .section-title {
          @include typography(section);
          padding-bottom: 1rem;
          margin-bottom: 2rem;
        }

        h3 {
          @include typography(h3);
          margin-top: 0;
          margin-bottom: 1rem;
        }

        p {
          @include typography(paragraph);
          margin-bottom: 1.5rem;
        }

        .learn-more {
          margin-bottom: 1.5rem;
        }

        .learn-more-link {
          @include typography(paragraph);
          display: inline-block;
          padding: 0.75rem 1.5rem;
          background-color: var(--primary-button-bg, #0c8ce0);
          color: var(--primary-button-text, white);
          border-radius: 50px;
          font-weight: 300;
          font-size: calc(1rem * var(--font-scale-factor));
          text-decoration: none;
          transition: background-color 0.2s ease-in-out;


          &:hover {
            background-color: var(--primary-button-hover, #0a7bc5);
          }
        }

        ul {
          margin: 0 0 1.5rem 0;
          padding-left: 20px;

          li {
            @include typography(paragraph);
            margin-bottom: 0.5rem;
          }
        }

        em {
          font-size: 0.9em;
          opacity: 0.8;
        }

        .column {
          @media (max-width: 768px) {
