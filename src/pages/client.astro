      padding-top: page-spacing(100px);
      padding-bottom: page-spacing(100px);
    }

    .scroll-section {
      padding-top: page-spacing(200px);
      padding-bottom: page-spacing(200px);
    }

    // Enterprise CTA Section Styles
    .enterprise-cta-section {
      margin-bottom: 90px;
    }

    .enterprise-cta-card {
      background-color: var(--surface-nav-bg);
      border-radius: 10px;
      box-shadow: var(--box-shadow);
      padding: 2rem 1.5rem;
      display: flex;
      flex-direction: column;
      gap: 2rem;
      border: 1px solid var(--border-separator, rgba(0, 0, 0, 0.08));

      @include break-up(lg) {
        flex-direction: row;
        align-items: center;
        padding: 2.5rem;
        gap: 2.5rem;
      }

      .cta-header {
        flex: 1;

        h3 {
          @include typography(h3);
          margin: 0 0 0.75rem 0;
          color: var(--text-body-primary);
        }

        p {
          @include typography(paragraph);
          margin: 0;
          color: var(--text-body-secondary, #666);
          line-height: 1.6;
        }
      }

      .cta-features {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;

        @include break-up(md) {
          flex-direction: row;
          gap: 1.5rem;
        }

        @include break-up(lg) {
          flex-direction: column;
          gap: 0.75rem;
        }

        .feature-item {
          display: flex;
          align-items: center;
          gap: 0.5rem;
          white-space: nowrap;

          .feature-icon {
            font-size: 1.1rem;
          }

          .feature-text {
            @include typography(paragraph);
            font-size: 0.9rem;
            color: var(--text-body-secondary, #666);
            margin: 0;
          }
        }
      }

      .cta-buttons {
        display: flex;
        flex-direction: column;
        gap: 0.75rem;
        flex-shrink: 0;

        @include break-up(sm) {
          flex-direction: row;
        }

        @include break-up(lg) {
          flex-direction: column;
        }

        a {
          display: inline-flex;
          align-items: center;
          justify-content: center;
          padding: 0.75rem 1.5rem;
          border-radius: 50px;
          font-weight: 500;
          font-size: 0.95rem;
          text-decoration: none;
          transition: all 0.2s ease-in-out;
