---
import Navigation from "../components/base/Navigation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import DownloadPlatform from "../components/download/DownloadPlatform.astro";
import DownloadVersion from "../components/download/DownloadVersion.astro";
---

<BaseLayout>
  <Navigation activeSlug="/newsletter" />
  <main id="download-page">
    <header>
      <h1>Download defguard Desktop Client</h1>
    </header>
    <section class="download-section">
      <DownloadPlatform />
      <DownloadVersion />
    </section>
    <hr />
    <h3>
      By downloading and using defguard, you agree to its <a href="#" target="_self">terms and conditions</a>.
    </h3>
  </main>
</BaseLayout>

<style lang="scss" is:global>
  #download-page {
    display: flex;
    padding: 100px 240px;
    flex-direction: column;
    gap: 40px;

    h1 {
      @include typography(section);
    }

    h3 {
      @include typography(h3);
      align-self: stretch;
      text-align: center;
      a {
        text-decoration-line: underline;
      }
    }

    hr {
      width: 100%;
    }

    .download-section {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      align-self: stretch;
    }
  }
</style>
