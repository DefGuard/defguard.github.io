  </main>
</BaseLayout>

<style lang="scss" is:global>
  #download-page {
    display: flex;
    padding: 100px 240px;
    flex-direction: column;
    align-items: flex-start;
    gap: 40px;

    h1 {
      @include typography(section);
    }

    h3 {
      @include typography(h3);
      align-self: stretch;
      text-align: center;
      a {
        text-decoration-line: underline;
      }
    }

    hr {
      width: 100%;
    }

    .download-section {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      align-self: stretch;

      .download-platform {
        display: flex;
        width: 569px;
        flex-direction: column;
        align-items: center;
        gap: 40px;

        .download-separator {
          display: flex;
          align-items: center;
          gap: 40px;
          align-self: stretch;
          text-align: center;
          @include typography(footer);

          p {
            width: 50%;
          }
        }
      }

      .download-version {
        display: flex;
        width: 382px;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        align-self: stretch;
        background-color: red;
      }
    }
  }
</style>
