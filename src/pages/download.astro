  <Navigation activeSlug="/newsletter" />
  <main id="download-page">
    <header>
      <h1>Download defguard Desktop Client</h1>
    </header>
    <section class="download-section">
      <section class="download-platform">
        <DownloadButton type={PlatformType.WINDOWS} />
        <div class="download-separator">
          <hr />
          <p>other variants</p>
          <hr />
        </div>
        <DownloadButton type={PlatformType.LINUX} />
