---
import Navigation from "../components/base/Navigation.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import ContentLimiter from "../components/ContentLimiter.astro";
import DealRegistrationForm from "../components/form/DealRegistrationForm/DealRegistrationForm";

const title = "Deal Registration â€“ Defguard Partner Program";
const description =
  "Register a deal as a Defguard partner. Submit customer prospect details for review.";
const url = "https://defguard.net/deal-registration/";
const featuredImage =
  "github.com/DefGuard/defguard.github.io/raw/main/public/images/png/defguard.png";
const imageWidth = "1080";
const imageHeight = "540";
---

<BaseLayout
  title={title}
  description={description}
  url={url}
  featuredImage={featuredImage}
  imageWidth={imageWidth}
  imageHeight={imageHeight}
>
  <Navigation activeSlug="/deal-registration/" />

  <div id="get-evaluation-license" class="sla-support-wrapper">
    <div id="sla-support">
      <div class="left">
        <h2>Partner Deal Registration</h2>
        <p class="sla-description">
          As a Defguard partner, use this form to register a new customer deal.
          Provide the customer prospect details below and our team will review
          the registration. You will be notified once the deal is accepted or
          rejected.
        </p>
      </div>
      <ContentLimiter contentId="sla-support-content" maxWidth={1100}>
        <div class="product-features">
          <DealRegistrationForm client:load />
        </div>
      </ContentLimiter>
    </div>
  </div>

  <style lang="scss" is:global>
    .sla-support-wrapper {
      width: 100%;
      background-color: var(--background-secondary, #f5f5f5);
      padding: 60px 0;
    }

    #sla-support {
      width: 100%;
      position: relative;

      .left {
        position: relative;
        width: 100%;

        & > h2 {
          @include typography(paragraph);
          box-sizing: border-box;
          font-family: "Poppins";
          font-size: 36px;
          font-weight: 400;
          line-height: 1.14;
          padding-top: 20px;
          padding-left: 20px;
          padding-right: 20px;
          padding-bottom: 0;
          max-width: 1100px;
          margin: 0 auto;
          word-wrap: break-word;
          overflow-wrap: break-word;
          hyphens: auto;

          @include break-up(md) {
            padding-top: 54px;
            padding-left: 20px;
            padding-right: 20px;
            font-size: 55px;
            padding-bottom: 0;
          }
        }
      }

      #sla-support-content {
        width: 100%;
        max-width: 1100px;
        margin: 0 auto;
        padding: 0 20px;
        box-sizing: border-box;
      }
    }

    .sla-description {
      max-width: 1100px;
      margin: 0 auto;
      padding: 30px 20px;
      padding-bottom: 100px;
      box-sizing: border-box;
    }
  </style>
</BaseLayout>
