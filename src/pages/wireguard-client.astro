      <script is:inline>
        (() => {
          const section = document.querySelector("[data-control-tabs]");
          if (!section) return;
          const tabs = Array.from(section.querySelectorAll(".control-tab"));
          const panels = Array.from(section.querySelectorAll(".control-panel"));

          const activateTab = (tab) => {
            const key = tab.getAttribute("data-tab");
            tabs.forEach((btn) => {
              const isActive = btn === tab;
              btn.classList.toggle("is-active", isActive);
              btn.setAttribute("aria-selected", isActive ? "true" : "false");
            });
            panels.forEach((panel) => {
              panel.classList.toggle("is-active", panel.getAttribute("data-panel") === key);
            });
          };

          tabs.forEach((tab) => {
            tab.addEventListener("click", () => activateTab(tab));
          });
        })();
      </script>
    </section>

