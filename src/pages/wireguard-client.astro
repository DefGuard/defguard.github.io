              const href = this.getAttribute("href") || "";
              const downloadType = this.getAttribute("data-download-type") || "";
              
              // Determine platform from download type or URL
              let platform = "Unknown";
              if (downloadType.includes("windows") || href.includes("Defguard_")) {
                platform = "Windows";
              } else if (href.includes("apps.apple.com")) {
                platform = "macOS";
              } else if (downloadType.includes("debian") || downloadType.includes("fedora") || href.includes("aur.archlinux.org")) {
