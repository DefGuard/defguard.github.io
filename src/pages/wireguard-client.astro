import TrustedBy from "./_home/components/TrustedBy.astro";
import DefguardInfo from "../components/download/DownloadInfo/DownloadInfo";
import { UpdateDownloadLinks } from "../components/download/UpdateDownloadLinks";

const title = "WireGuard Client - Secure VPN Client for Modern Networks";
const description = "Fast, secure, and easy-to-use WireGuard VPN client for desktop and mobile devices. Enterprise-grade security with modern user experience.";
const url = "https://defguard.net/wireguard-client";
const featuredImage = "/images/png/defguard.png";
const imageWidth = "1080";
const imageHeight = "540";
const tags = [
  "wireguard",
  "wireguard-client",
  "vpn-client",
  "vpn",
  "secure-vpn",
  "desktop-client",
  "mobile-client",
  "enterprise-vpn"
];

const faqItems = [
  {
    question: "Is Defguard Client free and open source?",
    answer:
      "Yes. Defguard Client is free and open source. You can review the source code and build it yourself.",
  },
  {
    question: "Which platforms are supported?",
    answer:
      "Desktop clients are available for Windows, macOS, and Linux. To use mobile apps available for iOS and Android, you need Defguard server.",
  },
  {
    question: "Can I import existing WireGuard configs?",
    answer:
      "Yes. Defguard Client can import standard WireGuard configuration files and manage multiple profiles.",
  },
  {
    question: "Does Defguard support MFA?",
    answer:
      "Yes. When connected to a Defguard self-hosted control plane (server), you can enable multi-factor authentication for each connection.",
  },
];

