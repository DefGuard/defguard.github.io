---
import clsx from "clsx";

interface Props {
  className?: string;
  contentClassName?: string;
  radius?: 10 | 8;
}

const { className, radius, contentClassName } = Astro.props;

const style: astroHTML.JSX.CSSProperties = {
  borderRadius: `${radius ?? 8}px`,
};
---

<div class={clsx("elevated-card-container", className)}>
  <div class={clsx("elevated-card", contentClassName)} style={style}>
    <slot />
  </div>
</div>

<style lang="scss">
  .elevated-card {
    box-sizing: border-box;
    border-radius: 10px;
    background: var(--surface-nav-bg);
    box-shadow: 0px 12px 24px 0px rgba(0, 0, 0, 0.08);
    width: 100%;
  }
</style>
