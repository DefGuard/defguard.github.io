---
import ProductSection from "../../layouts/ProductSection.astro";
import teoniteSvgRaw from "/public/svg/built-by.svg?raw";
---

<ProductSection padding="large">
  <div id="built-by">
    <div class="top">
      <div class="divider"></div>
      <p>Designed and developed by</p>
      <div class="divider"></div>
    </div>
    <a href="https://teonite.com/services/rust/">
      <Fragment set:html={teoniteSvgRaw} />
    </a>
  </div>
</ProductSection>

<style lang="scss" is:global>
  #built-by {
    width: 100%;
    display: flex;
    flex-flow: column;
    row-gap: 50px;
    align-items: center;
    justify-content: flex-start;

    .top {
      width: 100%;
      max-width: 100%;
      overflow: hidden;
      display: grid;
      grid-template-rows: 55px;
      grid-template-columns: 1fr max-content 1fr;
      align-items: center;
      justify-content: center;
      column-gap: 8px;

      p {
        text-align: center;
        @include typography(pricebox-title);
      }
    }

    .divider {
      display: block;
      content: " ";
      width: 100%;
      height: 1px;
      background-color: var(--text-body-primary);
    }

    svg {
      width: 100%;
      height: auto;
      path {
        fill: var(--text-body-primary);
      }
    }
  }
</style>
