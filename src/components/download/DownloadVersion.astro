---
import { DefguardIcon } from "../base/icons/DefguardIcon";

const response = await fetch('https://api.github.com/repos/defguard/client/releases');
const data = await response.json();
const latestVersion = data[0].name.slice(1);
const published = data[0].published_at.split('T')[0].split('-').reverse().join('.');
---

<section class="download-version">
  <div class="download-logo">
    <DefguardIcon client:only />
  </div>
  <div class="download-version-info">
    <div class="download-version-current">
      <p>Current version:</p>
      <p>{latestVersion}</p>
    </div>
    <div class="download-changelog">
      <a href="https://github.com/DefGuard/client/releases">View changelog â†’</a>
      <p>{published}</p>
    </div>
  </div>
</section>

<style lang="scss" is:global>
  #download-page {
    .download-version {
      display: flex;
      width: 100%;
      max-width: 382px;
      flex-direction: column;
      justify-content: space-between;
      align-items: flex-start;
      align-self: stretch;

      .download-logo {
        display: flex;
        // height: 382px;
        padding: 47.75px 120.262px 47.75px 122.359px;
        justify-content: center;
        align-items: center;
        border-radius: 30px;
        background: #0c8ce0;
      }

      .download-version-info {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 8px;
        align-self: stretch;

        .download-version-current,
        .download-changelog {
          display: flex;
          justify-content: space-between;
          align-items: flex-start;
          align-self: stretch;
        }

        .download-version-current {
          @include typography(pricebox-price);
        }

        .download-changelog {
          @include typography(pricebox-list);
        }
      }
    }

    @include break-down(sm) {
      .download-version {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
        align-self: stretch;

        .download-logo {
          background: none;
        }
      }
    }
  }
</style>
