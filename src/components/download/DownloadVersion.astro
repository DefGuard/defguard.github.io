---
import { DefguardIcon } from "../base/icons/DefguardIcon";
import DefguardInfo from "../download/DownloadInfo/DownloadInfo";
---

<section class="download-version">
  <div class="download-logo">
    <DefguardIcon client:only="react" />
  </div>
  <DefguardInfo owner="Defguard" repo="client" client:only="react" />
</section>

<style lang="scss" is:global>
  #download-page {
    .download-version {
      display: flex;
      width: 100%;
      max-width: 382px;
      flex-direction: column;
      justify-content: space-between;
      align-items: flex-start;

      .download-logo {
        display: flex;
        // height: 382px;
        padding: 47.75px 120.262px 47.75px 122.359px;
        justify-content: center;
        align-items: center;
        border-radius: 30px;
        background: #0c8ce0;
      }
    }

    @include break-down(sm) {
      .download-version {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;

        .download-logo {
          background: none;
        }
      }
    }
  }
</style>
