---
import ContentLimiter from "./ContentLimiter.astro";
interface Props {
  text: string;
  paddingTop?: string;
  as?: "span" | "h2" | "h3";
}
const { text, paddingTop = "3rem", as = "span" } = Astro.props;
const DividerTag = as;
---
<ContentLimiter>
  <div class="text-divider" style={`padding-top: ${paddingTop};`}>
    <DividerTag class="divider-text">{text}</DividerTag>
  </div>
</ContentLimiter>

<style lang="scss">
.text-divider {
  display: flex;
  align-items: center;
  width: 100%;
  gap: 1rem;
  border-bottom: 1px solid var(--border-separator);
  margin: 2rem 0;
  padding-top: 3rem;
}

.divider-text {
  @include typography(h3);
  white-space: nowrap;
  color: var(--text-body-primary, #333);
}
</style> 