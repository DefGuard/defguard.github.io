---
import ContentLimiter from "./ContentLimiter.astro";
interface Props {
  text: string;
  paddingTop?: string;
}
const { text, paddingTop = '3rem' } = Astro.props;
---
<ContentLimiter>
  <div class="text-divider" style={`padding-top: ${paddingTop};`}>
    <span class="divider-text">{text}</span>
  </div>
</ContentLimiter>

<style lang="scss">
.text-divider {
  display: flex;
  align-items: center;
  width: 100%;
  gap: 1rem;
  border-bottom: 1px solid var(--border-separator);
  margin: 2rem 0;
  padding-top: 3rem;
}

.divider-text {
  @include typography(h3);
  white-space: nowrap;
  color: var(--text-body-primary, #333);
}
</style> 