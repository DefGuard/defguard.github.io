---
interface Props {
  url: string;
  title: string;
}

const { url, title } = Astro.props;

// Encode the URL and title for sharing
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);

// Construct share URLs
const xUrl = `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`;
const linkedinUrl = `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`;
---

<div class="share-buttons">
  <span class="share-label">Share:</span>
  <div class="share-icons">
    <a
      href={xUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="share-icon x-button"
      aria-label="Share on X (Twitter)"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
      </svg>
    </a>
    <a
      href={linkedinUrl}
      target="_blank"
      rel="noopener noreferrer"
      class="share-icon linkedin-button"
      aria-label="Share on LinkedIn"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
      </svg>
    </a>
  </div>
</div>

<style lang="scss">
  .share-buttons {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    padding: 0;
    top: calc(var(--nav-height) + 1rem);
    margin-bottom: 2rem;
    width: fit-content;
    //border-top: 1px solid var(--border-color, #eaeaea);


    .share-label {
      font-size: calc(1rem * var(--font-scale-factor));
      color: var(--text-body-primary);
      font-weight: 300;
      line-height: 1.6;
    }

    .share-icons {
      display: flex;
      gap: 0.75rem;
    }

    .share-icon {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      border-radius: 50%;
      color: var(--text-body-primary);
      transition: all 0.2s ease;

      &:hover {
        color: var(--primary-color);
        transform: translateY(-2px);
      }

      svg {
        width: 18px;
        height: 18px;
      }
    }
  }

  @media (max-width: 768px) {
    .share-buttons {
      position: relative;
      top: 0;
      width: 100%;
      justify-content: left;
    }
  }
</style> 